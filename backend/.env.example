# Copy this file to .env and fill in your values.

# --- Database ---
DATABASE_URL=sqlite+aiosqlite:///./kashf.db

# --- API Keys (Optional) ---
# HaveIBeenPwned API key (https://haveibeenpwned.com/API/Key)
HIBP_API_KEY=
# Shodan API key (https://account.shodan.io/)
SHODAN_API_KEY=

# --- Local LLM ---
# Path to your GGUF model file for local AI inference
# e.g., C:/models/mistral-7b-instruct-v0.2.Q4_K_M.gguf
LLM_MODEL_PATH=

# --- CORS ---
# Comma-separated allowed origins for React frontend
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# --- Security ---
# Auto-wipe scan data after N hours (default: 24)
DATA_TTL_HOURS=24
